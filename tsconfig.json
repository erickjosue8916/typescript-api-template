{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2015",
            "ES6"
        ],
        "types": [
            "reflect-metadata"
        ],
        "outDir": "./lib",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "paths": { },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "compileOnSave": true
}